<div class="row text-center create-row">
    <h3>Create a new burger</h3>
    <form class="form-inline" action="/create" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="burger_type" placeholder="Enter burger type">
        </div>
        <button type="submit" class="btn btn-default">Submit Burger</button>
    </form>
</div>

<div class="row">
    <div class="col-md-3 col-md-offset-2">
        {{#each burger}}
            {{#unless this.devoured}}
                <div class="well text-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <form action="/update/{{this.id}}" method="POST">
                            <button type="submit" class="btn btn-warning"><i class="fa fa-cutlery" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Eat Burger</button>
                        </form>
                    </div>
                </div>
            {{/unless}}
        {{/each}}
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-3">
        {{#each burger}}
            {{#if this.devoured}}
                <div class="well text-center">
                    <h4>{{this.burger_name}}</h4>
                    <div>
                        <form action="/delete/{{this.id}}" method="POST">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Clean Up</button>
                        </form>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>

